name: Build and Deploy Flutter App

on:
  workflow_dispatch:
  push:
    branches:
      - Church-On-App-with-Cursor

jobs:
  build:
    runs-on: ubuntu-latest

    steps:
      - name: Checkout repository
        uses: actions/checkout@v4

      - name: Setup Flutter
        uses: subosito/flutter-action@v2
        with:
          flutter-version: "3.22.2"

      - name: Enable Flutter Web
        run: flutter config --enable-web
        working-directory: church_on_app

      - name: Install dependencies
        run: flutter pub get
        working-directory: church_on_app

      - name: Check commits since last successful build
        id: check_commit_count
        run: |
          LAST_BUILD_COMMIT=$(gh run list --workflow=build-all.yml --branch=Church-On-App-with-Cursor --status=success --limit=1 --json headSha --jq '.[0].headSha' || echo "")
          if [ -z "$LAST_BUILD_COMMIT" ]; then
            echo "commit_count=0" >> $GITHUB_OUTPUT
            exit 0
          fi
          COMMIT_COUNT=$(git rev-list --count ${LAST_BUILD_COMMIT}..HEAD)
          echo "commit_count=$COMMIT_COUNT" >> $GITHUB_OUTPUT

      - name: Exit if commits less than 3
        if: steps.check_commit_count.outputs.commit_count != '' && steps.check_commit_count.outputs.commit_count < 3
        run: |
          echo "Less than 3 commits since last build. Skipping build."
          exit 0

      - name: Build Android APK
        run: flutter build apk --release
        working-directory: church_on_app

      - name: Build Android AppBundle
        run: flutter build appbundle --release
        working-directory: church_on_app

      - name: Build Web
        run: flutter build web --release
        working-directory: church_on_app

      - name: Upload Android APK
        uses: actions/upload-artifact@v4
        with:
          name: android-apk
          path: church_on_app/build/app/outputs/flutter-apk/app-release.apk

      - name: Upload Android AAB
        uses: actions/upload-artifact@v4
        with:
          name: android-aab
          path: church_on_app/build/app/outputs/bundle/release/app-release.aab

      - name: Upload Web Build
        uses: actions/upload-artifact@v4
        with:
          name: web-build
          path: church_on_app/build/web

  deploy-web:
    needs: build
    runs-on: ubuntu-latest
    if: github.event_name == 'push'  # deploy only on push, not manual runs

    steps:
      - name: Checkout repository
        uses: actions/checkout@v4

      - name: Setup Flutter
        uses: subosito/flutter-action@v2
        with:
          flutter-version: "3.22.2"

      - name: Enable Flutter Web
        run: flutter config --enable-web
        working-directory: church_on_app

      - name: Install dependencies
        run: flutter pub get
        working-directory: church_on_app

      - name: Build Web
        run: flutter build web --release
        working-directory: church_on_app

      - name: Deploy to GitHub Pages
        uses: peaceiris/actions-gh-pages@v3
        with:
          github_token: ${{ secrets.GITHUB_TOKEN }}
          publish_dir: ./church_on_app/build/web

  ios-build:
    if: false  # disable for now, enable if you have Mac runners or Codemagic integration
    runs-on: macos-latest
    steps:
      - name: Checkout repo
        uses: actions/checkout@v4
      - name: Setup Flutter
        uses: subosito/flutter-action@v2
        with:
          flutter-version: "3.22.2"
      - name: Install dependencies
        run: flutter pub get
        working-directory: church_on_app
      - name: Build iOS
        run: flutter build ios --release
        working-directory: church_on_app
      # Add code signing and publishing here

